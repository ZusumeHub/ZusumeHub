-- ZusumeHub Library Script for Roblox
-- Original Author: Zysume (Hypothetical Implementation)
-- Version: 1.0
-- Last Updated: April 2025
-- Description: Provides GUI functionality for ZusumeHub script, including checkboxes, text inputs, sections, and notifications.

-- Services
local UserInputService = game:GetService("UserInputService")
local TweenService = game:GetService("TweenService")
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- Library Table
local TeleportGUILibrary = {}

-- GUI Setup
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "ZusumeHubGui"
ScreenGui.Parent = LocalPlayer:WaitForChild("PlayerGui")
ScreenGui.ResetOnSpawn = false

local MainFrame = Instance.new("Frame")
MainFrame.Name = "MainFrame"
MainFrame.Size = UDim2.new(0, 300, 0, 400)
MainFrame.Position = UDim2.new(0.5, -150, 0.5, -200)
MainFrame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
MainFrame.BorderSizePixel = 0
MainFrame.Parent = ScreenGui
MainFrame.Visible = true

-- Make MainFrame Draggable
local dragging, dragInput, dragStart, startPos
MainFrame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = MainFrame.Position
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)
MainFrame.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement and dragging then
        dragInput = input
    end
end)
UserInputService.InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        local delta = input.Position - dragStart
        MainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
    end
end)

-- Topbar
local Topbar = Instance.new("Frame")
Topbar.Name = "Topbar"
Topbar.Size = UDim2.new(1, 0, 0, 40)
Topbar.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
Topbar.Parent = MainFrame

local Title = Instance.new("TextLabel")
Title.Name = "Title"
Title.Size = UDim2.new(0.8, 0, 1, 0)
Title.Position = UDim2.new(0.1, 0, 0, 0)
Title.BackgroundTransparency = 1
Title.Text = "ZusumeHub"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.TextSize = 20
Title.TextXAlignment = Enum.TextXAlignment.Center -- Centered title
Title.Parent = Topbar

local MinimizeButton = Instance.new("TextButton")
MinimizeButton.Name = "MinimizeButton"
MinimizeButton.Size = UDim2.new(0, 30, 0, 30)
MinimizeButton.Position = UDim2.new(1, -35, 0, 5)
MinimizeButton.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
MinimizeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
MinimizeButton.Text = "-"
MinimizeButton.TextSize = 18
MinimizeButton.Parent = Topbar
MinimizeButton.MouseButton1Click:Connect(function()
    MainFrame.Visible = not MainFrame.Visible
    TeleportGUILibrary.createNotification(MainFrame.Visible and "GUI restored!" or "GUI minimized!", "info")
end)

-- Content Frame
local ContentFrame = Instance.new("Frame")
ContentFrame.Name = "ContentFrame"
ContentFrame.Size = UDim2.new(1, -10, 1, -50)
ContentFrame.Position = UDim2.new(0, 5, 0, 45)
ContentFrame.BackgroundTransparency = 1
ContentFrame.Parent = MainFrame
TeleportGUILibrary.ContentFrame = ContentFrame

-- Scrolling Frame for Content
local ScrollingFrame = Instance.new("ScrollingFrame")
ScrollingFrame.Size = UDim2.new(1, 0, 1, 0)
ScrollingFrame.BackgroundTransparency = 1
ScrollingFrame.ScrollBarThickness = 5
ScrollingFrame.Parent = ContentFrame
ScrollingFrame.CanvasSize = UDim2.new(0, 0, 0, 315) -- Initial size, updated later

-- Footer (Youtube: Zysume)
local YoutubeLabel = Instance.new("TextLabel")
YoutubeLabel.Name = "YoutubeLabel"
YoutubeLabel.Size = UDim2.new(1, 0, 0, 20)
YoutubeLabel.Position = UDim2.new(0, 0, 1, -25)
YoutubeLabel.BackgroundTransparency = 1
YoutubeLabel.Text = "Youtube: Zysume"
YoutubeLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
YoutubeLabel.TextSize = 14
YoutubeLabel.TextXAlignment = Enum.TextXAlignment.Left -- Left-aligned
YoutubeLabel.Parent = MainFrame

-- Toggle GUI with 'M' Key
UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if not gameProcessed and input.KeyCode == Enum.KeyCode.M then
        MainFrame.Visible = not MainFrame.Visible
        TeleportGUILibrary.createNotification(MainFrame.Visible and "GUI shown!" or "GUI hidden!", "info")
    end
end)

-- Function to Create a Section
function TeleportGUILibrary.createSection(name, yOffset)
    local label = Instance.new("TextLabel")
    label.Name = name .. "Label"
    label.Size = UDim2.new(1, 0, 0, 30)
    label.Position = UDim2.new(0, 0, 0, yOffset)
    label.BackgroundTransparency = 1
    label.Text = name
    label.TextColor3 = Color3.fromRGB(255, 255, 255)
    label.TextSize = 18
    label.TextXAlignment = Enum.TextXAlignment.Center -- Centered section title
    label.Parent = ScrollingFrame

    local separator = Instance.new("Frame")
    separator.Name = name .. "Separator"
    separator.Size = UDim2.new(1, -20, 0, 2)
    separator.Position = UDim2.new(0, 10, 0, yOffset + 30)
    separator.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
    separator.BorderSizePixel = 0
    separator.Parent = ScrollingFrame

    return label, separator
end

-- Function to Create a Checkbox
function TeleportGUILibrary.createCheckbox(id, text, position, parent, callback)
    local container = Instance.new("Frame")
    container.Name = id .. "Container"
    container.Size = UDim2.new(1, -20, 0, 30)
    container.Position = position
    container.BackgroundTransparency = 1
    container.Parent = parent

    local checkbox = Instance.new("TextButton")
    checkbox.Name = id
    checkbox.Size = UDim2.new(0, 20, 0, 20)
    checkbox.Position = UDim2.new(0, 0, 0, 5)
    checkbox.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
    checkbox.Text = ""
    checkbox.Parent = container

    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(1, -30, 1, 0)
    label.Position = UDim2.new(0, 30, 0, 0)
    label.BackgroundTransparency = 1
    label.Text = text
    label.TextColor3 = Color3.fromRGB(255, 255, 255)
    label.TextSize = 16
    label.TextXAlignment = Enum.TextXAlignment.Left
    label.Parent = container

    local checked = false
    checkbox.MouseButton1Click:Connect(function()
        checked = not checked
        checkbox.BackgroundColor3 = checked and Color3.fromRGB(0, 255, 0) or Color3.fromRGB(100, 100, 100)
        callback(checked)
    end)

    local function getState()
        return checked
    end

    local function setState(state)
        checked = state
        checkbox.BackgroundColor3 = checked and Color3.fromRGB(0, 255, 0) or Color3.fromRGB(100, 100, 100)
        callback(checked)
    end

    checkbox.SetState = setState
    return checkbox, getState
end

-- Function to Create a Text Input
function TeleportGUILibrary.createTextInput(id, placeholder, defaultValue, position, parent, callback)
    local container = Instance.new("Frame")
    container.Name = id .. "Container"
    container.Size = UDim2.new(1, -20, 0, 30)
    container.Position = position
    container.BackgroundTransparency = 1
    container.Parent = parent

    local textBox = Instance.new("TextBox")
    textBox.Name = id
    textBox.Size = UDim2.new(0.5, 0, 1, 0)
    textBox.Position = UDim2.new(0.5, 0, 0, 0)
    textBox.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
    textBox.TextColor3 = Color3.fromRGB(255, 255, 255)
    textBox.TextSize = 16
    textBox.Text = tostring(defaultValue)
    textBox.PlaceholderText = placeholder
    textBox.Parent = container

    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(0.5, -10, 1, 0)
    label.Position = UDim2.new(0, 0, 0, 0)
    label.BackgroundTransparency = 1
    label.Text = placeholder
    label.TextColor3 = Color3.fromRGB(255, 255, 255)
    label.TextSize = 16
    label.TextXAlignment = Enum.TextXAlignment.Left
    label.Parent = container

    textBox.FocusLost:Connect(function(enterPressed)
        if enterPressed then
            callback(textBox.Text)
        end
    end)

    local function setValue(value)
        textBox.Text = tostring(value)
    end

    textBox.setValue = setValue
    return container, textBox
end

-- Function to Create a Notification
function TeleportGUILibrary.createNotification(message, type)
    local notification = Instance.new("Frame")
    notification.Size = UDim2.new(0, 200, 0, 50)
    notification.Position = UDim2.new(1, -210, 1, -60)
    notification.BackgroundColor3 = type == "success" and Color3.fromRGB(0, 200, 0) or
                                    type == "warning" and Color3.fromRGB(255, 165, 0) or
                                    type == "error" and Color3.fromRGB(255, 0, 0) or
                                    Color3.fromRGB(0, 120, 255)
    notification.Parent = ScreenGui

    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(1, -10, 1, -10)
    label.Position = UDim2.new(0, 5, 0, 5)
    label.BackgroundTransparency = 1
    label.Text = message
    label.TextColor3 = Color3.fromRGB(255, 255, 255)
    label.TextSize = 14
    label.TextWrapped = true
    label.Parent = notification

    spawn(function()
        wait(3)
        local tween = TweenService:Create(notification, TweenInfo.new(0.5), {Position = UDim2.new(1, 0, 1, -60)})
        tween:Play()
        tween.Completed:Wait()
        notification:Destroy()
    end)
end

-- Function to Update Canvas Size
function TeleportGUILibrary.updateCanvasSize(height)
    ScrollingFrame.CanvasSize = UDim2.new(0, 0, 0, height)
end

-- Return Library
return TeleportGUILibrary